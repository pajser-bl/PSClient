<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.1" fx:controller="controller.user.ProfileController">
   <children>
      <HBox fx:id="avatarBox" alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fx:id="avatar" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
      <HBox fx:id="infoBox" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Separator prefWidth="200.0" />
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <Separator prefWidth="200.0" />
         </children>
      </HBox>
      <VBox fx:id="userDataBox" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Label fx:id="name" textFill="#21947b"/>
            <Label fx:id="lastName" textFill="#21947b"/>
            <Label fx:id="username" textFill="#21947b"/>
            <Label fx:id="userType" textFill="#21947b"/>
            <Label fx:id="qualification" textFill="#21947b"/>
            <Button fx:id="updateUserButton" onAction="#updateUser" styleClass="commonbutton" stylesheets="@../../css/common_button.css" text="Izmjeni" mnemonicParsing="false" />
         </children>
      </VBox>
   </children>
</AnchorPane>
